generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                String          @id @default(uuid())
  email             String          @unique
  password          String
  isVerified        Boolean         @default(false)
  verificationToken String?
  role              Role            @default(DONOR)
  createdAt         DateTime        @default(now())
  updatedAt         DateTime        @updatedAt
  firstName         String
  lastName          String
  phoneNumber       String
  admin             Admin?
  donor             Donor?
  logistics_staff   LogisticsStaff?
  notifications     Notification[]
  recipient         Recipient?
}

model Recipient {
  userId             String             @id
  address            String
  subscriptionStatus SubscriptionStatus
  subscriptionDate   DateTime
  organization       String?
  Donation           Donation[]
  user               User               @relation(fields: [userId], references: [id])
  needs              RecipientNeed[]
  claimedDonations   Donation[]         @relation("RecipientClaimedDonations")
}

model Donor {
  userId    String     @id
  address   String
  Donations Donation[]
  user      User       @relation(fields: [userId], references: [id])
}

model Donation {
  id              String         @id @default(cuid())
  donorId         String
  availableFrom   DateTime
  availableTo     DateTime
  expiryDate      DateTime
  foodType        String
  quantity        String
  location        String
  notes           String?
  createdAt       DateTime       @default(now())
  status          String
  claimedById     String?
  Delivery        Delivery?
  donor           Donor          @relation(fields: [donorId], references: [userId])
  matchedNeedId   String?        @unique
  matchedNeed     RecipientNeed? @relation("NeedDonationMatch", fields: [matchedNeedId], references: [id])
  claimedBy       Recipient?     @relation("RecipientClaimedDonations", fields: [claimedById], references: [userId])
  Recipient       Recipient?     @relation(fields: [recipientUserId], references: [userId])
  recipientUserId String?
}

model Admin {
  userId String @id
  user   User   @relation(fields: [userId], references: [id])
}

model LogisticsStaff {
  userId       String     @id
  role         String
  vehicleInfo  String?
  assignedZone String?
  deliveries   Delivery[]
  user         User       @relation(fields: [userId], references: [id])
}

model RecipientNeed {
  id              String     @id @default(uuid())
  recipientId     String
  requestedAt     DateTime   @default(now())
  status          NeedStatus @default(pending)
  foodType        String
  notes           String?
  DropOffAddress  String
  quantity        String
  recipient       Recipient  @relation(fields: [recipientId], references: [userId])
  matchedDonation Donation?  @relation("NeedDonationMatch")
}

model Notification {
  id         String   @id @default(uuid())
  userId     String
  message    String
  readStatus Boolean  @default(false)
  createdAt  DateTime @default(now())
  user       User     @relation(fields: [userId], references: [id])
}

model DeliveryTracking {
  id           String   @id @default(uuid())
  deliveryId   String
  location     String
  statusUpdate String
  timestamp    DateTime @default(now())
  delivery     Delivery @relation(fields: [deliveryId], references: [id])
}

model Delivery {
  id               String  @id @default(uuid())
  donationId       String  @unique
  logisticsStaffId String?

  pickupLocation       String
  dropoffLocation      String
  recipientPhone       String
  deliveryInstructions String?

  scheduledDate DateTime?
  deliveredAt   DateTime?

  deliveryStatus DeliveryStatus @default(PENDING)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  donation        Donation           @relation(fields: [donationId], references: [id])
  logisticsStaff  LogisticsStaff?    @relation(fields: [logisticsStaffId], references: [userId])
  trackingUpdates DeliveryTracking[]
}

enum Role {
  ADMIN
  DONOR
  RECIPIENT
  LOGISTIC_PROVIDER
}

enum SubscriptionStatus {
  active
  inactive
  pending
}

enum FoodStatus {
  available
  matched
  delivered
  expired
}

enum NeedStatus {
  pending
  matched
  fulfilled
}

enum DeliveryStatus {
  PENDING
  SCHEDULED
  IN_TRANSIT
  DELIVERED
  FAILED
  CANCELLED
}
